{
  "forceConsistentCasingInFileNames": true,
  "noImplicitReturns": true,
  "strict": true,
  "noUnusedLocals": true,
  "compilerOptions": {
    "target": "ES6",
    "sourceMap": true,
    "module": "commonjs",
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "paths": {
      "@common/*": ["src/common/*"],
      "@music/*": ["src/music/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/__test__"]
}
